{
  "name": "substance",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "yarn build-css",
    "build-css": "tcm --pattern 'src/**/!(global).css' --camelCase",
    "clean-css": "shx rm 'packages/*/src/**/*.css.d.ts' && yarn build-css",
    "precommit": "yarn static-ci && yarn test-ci",
    "static-ci": "yarn format-ci && yarn lint && yarn compile",
    "format": "prettier --write '**/*'",
    "format-ci": "prettier --list-different '**/*'",
    "lint": "tslint --project .",
    "compile": "tsc --noEmit",
    "test": "jest",
    "test-ci": "jest --coverage --ci --no-cache --runInBand",
    "dev": "webpack-dev-server --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "deploy": "yarn build && sls client deploy"
  },
  "dependencies": {
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.5",
    "@types/react": "^16.1.0",
    "@types/react-dom": "^16.0.4",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-syntax-typescript": "^7.0.0-beta.3",
    "css-loader": "^0.28.11",
    "html-webpack-plugin": "^3.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.1.0",
    "prettier": "^1.13.5",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-hot-loader": "^4.0.1",
    "shx": "^0.3.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.1.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typed-css-modules": "^0.3.4",
    "typescript": "^2.8.1",
    "uglifyjs-webpack-plugin": "^1.2.6",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1"
  }
}
